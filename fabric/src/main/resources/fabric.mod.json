{
	"schemaVersion": 1,
	"id": "geckolib",
	"version": "${version}",
	"name": "${mod_display_name}",
	"description": "${mod_description}",
	"authors": [
		"${mod_authors}"
	],
	"contributors": [
		"${mod_contributors}"
	],
	"contact": {
		"homepage": "https://www.curseforge.com/minecraft/mc-mods/geckolib",
		"issues": "https://github.com/bernie-g/geckolib/issues",
		"sources": "https://github.com/bernie-g/geckolib"
	},
	"license": "${mod_license}",
	"icon": "${mod_id}.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"software.bernie.geckolib.GeckoLib"
		],
		"client": [
			"software.bernie.geckolib.GeckoLibClient"
		]
	},
	"mixins": [
		"geckolib.mixins.json"
	],
	"accessWidener": "geckolib.classtweaker",
	"depends": {
   		"fabricloader": "${fabric_loader_version_range}",
		"fabric-api": "${fabric_api_version_range}",
		"java": ">=${java_version}",
		"minecraft": ">=${minecraft_version}"
	},
	"custom": {
		"modmenu": {
			"badges": [ "library" ]
		}
	}
}