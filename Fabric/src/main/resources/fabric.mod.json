{
	"schemaVersion": 1,
	"id": "geckolib3",
	"version": "${version}",
	"name": "Geckolib",
	"description": "GeckoLib is an animation engine for Minecraft Mods, with support for complex 3D keyframe-based animations, 30+ easings, concurrent animation support, sound and particle keyframes, event keyframes, and more.",
	"authors": [
		"Gecko, Eliot, AzureDoom, Hydos, DerToaster"
	],
	"contact": {
		"homepage": "https://www.curseforge.com/minecraft/mc-mods/geckolib",
		"issues": "https://github.com/bernie-g/geckolib/issues",
		"sources": "https://github.com/bernie-g/geckolib"
	},
	"license": "MIT",
	"icon": "geckolib.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"software.bernie.example.GeckoLibMod"
		],
		"client": [
			"software.bernie.example.ClientListener",
			"software.bernie.geckolib3.network.ClientPackets"
		]
	},
	"mixins": [
		"geckolib3.mixins.json"
	],
	"accessWidener": "geckolib.aw",
	"depends": {
		"fabricloader": ">=0.12.5",
		"fabric": "*",
		"java": ">=17",
		"minecraft": "1.18.x"
	}
}
